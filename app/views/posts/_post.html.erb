<div class="post">
    <h4><%= post.title %></h4>
    <p><%= post.description %></p>
    <p><small>Created <%= time_ago_in_words(post.created_at) %> ago by <%= post.user.email %></small></p>
    <% if current_user == post.user %>
        <%= link_to "Edit post", edit_post_path(post) %>
    <% end %>
</div>